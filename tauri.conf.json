{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/tauri.conf.json",
  "productName": "AI Smartness",
  "version": "0.1.0-alpha",
  "identifier": "com.vzkts.ai-smartness",
  "build": {
    "frontendDist": "./src/gui/frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AI Smartness â€” Dashboard",
        "width": 1024,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
