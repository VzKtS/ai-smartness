{
  "name": "ai-smartness-waker",
  "displayName": "AI Smartness",
  "description": "Cognitive memory agent wake-up and status for AI Smartness",
  "version": "5.1.0",
  "publisher": "vzcrow",
  "license": "BUSL-1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/VzKtS/ai-smartness"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiSmartnessWaker.showStatus",
        "title": "AI Smartness: Show Agent Status"
      },
      {
        "command": "aiSmartnessWaker.checkInbox",
        "title": "AI Smartness: Check Agent Inbox"
      },
      {
        "command": "aiSmartnessWaker.toggleAutoWake",
        "title": "AI Smartness: Toggle Auto-Wake"
      },
      {
        "command": "aiSmartnessWaker.openAgentWindow",
        "title": "AI Smartness: Open Agent Window"
      },
      {
        "command": "aiSmartnessWaker.selectAgent",
        "title": "AI Smartness: Select Agent Profile"
      }
    ],
    "configuration": {
      "title": "AI Smartness",
      "properties": {
        "aiSmartness.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-wake for AI agents"
        },
        "aiSmartness.watchInterval": {
          "type": "number",
          "default": 3000,
          "description": "Poll interval in milliseconds for wake signal detection"
        },
        "aiSmartness.autoPrompt": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject 'check inbox' on wake signal detection"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^3.0.0"
  }
}
